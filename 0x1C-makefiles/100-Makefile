CC = gcc
SRC = main.c school.c
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(SRC)
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	$(RM) *~

oclean:
	$(RM) main.o school.o

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

# Ensure header dependency
main.o: m.h
school.o: m.h
